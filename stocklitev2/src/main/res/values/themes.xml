<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.Light">
        <!--         Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/primary_light</item>

        <!--         Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>


        <!--        set actionBar style-->
        <item name="actionBarStyle">@style/actionBarStyle</item>

        <!--        button style-->
        <item name="materialButtonStyle">@style/buttonStyle</item>

        <!--         Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

        <!--         Status bar color. -->
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>

        <item name="android:windowBackground">@color/colorWindowBackground</item>

    </style>

    <!--    actionBar style-->
    <style name="actionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="cornerRadius">24dp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="textAllCaps">false</item>
        <!--        <item name="android:textSize">24sp</item>-->
    </style>


    <style name="textStyleAppName" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">48sp</item>
    </style>


    <style name="Theme.AppThemeDark" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!--         Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <!--         Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!--        button style-->
        <item name="materialButtonStyle">@style/buttonStyle</item>

        <!--         Status bar color. -->
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>

        <item name="android:windowBackground">@color/colorWindowBackground</item>
    </style>

</resources>