<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.ORCA50Scanner" parent="Theme.MaterialComponents.Light">
        <!--         Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--         Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:windowBackground">@color/colorWindowBackground</item>

        <item name="actionBarStyle">@style/actionBarStyle</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

        <!--         Status bar color. -->
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="actionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    NoActionBar theme -->
    <style name="Theme.AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--         Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--         Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:windowBackground">@color/colorWindowBackground</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

        <!--         Status bar color. -->
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="Theme.AppTheme.NoActionBar.FullScreen" parent="Theme.AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>